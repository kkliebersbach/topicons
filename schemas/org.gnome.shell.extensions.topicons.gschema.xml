<schemalist>
	<schema id="org.gnome.shell.extensions.topicons" path="/org/gnome/shell/extensions/topicons/">
		<key name="icon-size" type="i">
			<default>20</default>
			<summary>Icon size</summary>
			<description>Icon size in pixels.</description>
		</key>
		<key name="icon-padding" type="i">
			<default>6</default>
			<summary>Icon padding</summary>
			<description>Icon padding in pixels.</description>
		</key>
		<key name="hidden-icons" type="as">
			<default>[]</default>
			<summary>Hidden icons</summary>
			<description>Icons to hide from the tray.</description>
		</key>
	</schema>
</schemalist>
